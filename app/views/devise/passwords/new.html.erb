<h1 class="text-white text-4xl m-4 text-center dancing-script">Forgot your password?</h1>

<div class="w-full max-w-xs mx-auto form">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control rounded shadow text-sm w-full" %>
    </div>

    <div class="mb-4">
      <%= f.submit "Send me reset password instructions", class: "btn btn-purple rounded mb-5 mt-2 text-xs" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>