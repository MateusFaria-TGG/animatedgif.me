<h1 class="text-white text-4xl m-4 text-center dancing-script">Sign up</h1>

<div class="w-full max-w-xs mx-auto form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_field :name, class: "form-control rounded shadow text-sm w-full" %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control rounded shadow text-sm w-full" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "text-gray-700 text-sm font-bold mb-2" %>
      <% if @minimum_password_length %>
      <em class="text-gray-700">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control rounded shadow text-sm w-full" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control rounded shadow text-sm w-full" %>
    </div>

    <div class="mb-4">
      <%= f.submit "Sign up", class: "btn btn-purple rounded mb-5 mt-2" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>