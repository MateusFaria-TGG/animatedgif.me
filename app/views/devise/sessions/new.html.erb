<h1 class="text-white text-4xl m-4 text-center dancing-script">Log in</h1>
<div class="w-full max-w-xs mx-auto form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control rounded shadow text-sm w-full" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control rounded shadow text-sm w-full" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "text-gray-700 text-sm font-bold mb-2 align-top" %>
      </div>
    <% end %>

    <div class="align-middle mb-2">
      <%= f.submit "Log in", class: "btn btn-purple rounded mb-5 mt-2" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>