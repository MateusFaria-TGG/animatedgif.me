<div class="mx-auto mt-10">
  <%= image_tag @gif.image_url, class: "mx-auto"%>
  <div class="text-center text-white">
    <div class="text-center text-xs flex justify-center">
      <div>Uploaded by: <%= link_to @gif.user.name, @gif.user, class: "hover:text-purple-700"%> </div>
      <% if user_signed_in? && current_user == @gif.user %>
        <%= link_to 'Edit', edit_gif_path(@gif), class: "hover:text-purple-600 ml-2"%>
      <% end %>
    </div>

    <div class="m-2">
      <%= linked_tag_list @gif %>
    </div>
  </div>
  
  <div data-controller='clipboard' class="flex justify-center text-sm flex-grow">
    <%= text_field_tag nil, full_gif_url(@gif), data: { target: "clipboard.source" }, class: "form-control rounded-l" %>
    <button data-action='click->clipboard#copy' data-target="clipboard.button" class="btn btn-purple rounded-r">Copy</button>
  </div>
</div>